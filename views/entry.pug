extends layout

block content
    h1 Eintrag
    div(class="row border border-secondary p-2 m-2")
        form(action="/editPassword/"+entryData.id method="post")
            div(class="row justify-content-between")
                div(class="col col-lg-2 bg-dark text-white rounded p-3")
                    h4 Bezeichnung
                    input(type="text" id="name" name="name" value=entryData.name)
                div(class="col col-lg-2 bg-dark text-white rounded p-3")
                    h4 Nutzername
                    input(type="text" id="username" name="username" value=entryData.userName)
                div(class="col col-lg-2 bg-dark text-white rounded p-3")
                    h4 Passwort
                    input(type="password" id="password" name="password" value=entryData.password)
                    label(for="visibilityCheck") Passwort anzeigen
                    input(class="form-check-input" type="checkbox" id="visibilityCheck" name="visibilityCheck" onclick="toggleVisibility()")
                    button(type="button" class="btn btn-secondary" onclick="copyPassword()") Copy
                div(class="col col-lg-2 bg-dark text-white rounded p-3")
                        h4 Adressen
                        input(type="text" id="addresses" name="addresses" value=entryData.urls)
                div(class="col col-lg-2 bg-dark text-white rounded p-3")
                        h4 Notizen
                        input(type="text" id="notes" name="notes" value=entryData.annots)
            button(type="submit", class="btn btn-primary") Speichern
            a(href="/dashboard")
                button(class="btn btn-secondary") Abbrechen

    script.
        function toggleVisibility() {
            if(document.getElementById("visibilityCheck").checked) {
                document.getElementById("password").type="text";
            }
            else {
                document.getElementById("password").type="password";
            }
        }

        function copyPassword() {
            navigator.clipboard.writeText(document.getElementById("password").value);
        }

